{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["ESNext", "dom"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "target": "ES2022",
    "noEmitOnError": true,
    "skipLibCheck": true,
    "removeComments": true
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
